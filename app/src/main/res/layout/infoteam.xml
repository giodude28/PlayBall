<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_margin="10dp">

      <TextView
          android:id="@+id/name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="30sp"
          android:fontFamily="sans-serif-light"
          android:textStyle="bold"
          android:text="Team Name"
          android:gravity="center"
          />
      <TextView
          android:layout_width="match_parent"
          android:gravity="center"
          android:layout_height="wrap_content"
          android:layout_below="@+id/name"
          android:fontFamily="@font/bungeeregular"
          android:textSize="20sp"
          android:id="@+id/alterName"
          android:layout_marginTop="20dp"
          android:textStyle="bold"
          android:text="alter name"
          />
      <ImageView
          android:id="@+id/teamimg"
          android:transitionName="img"
          android:scaleType="fitXY"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:layout_below="@id/alterName"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
          <ImageView
              android:id="@+id/jerseyimg"
              android:layout_marginTop="20dp"
              android:transitionName="img"

              android:layout_width="200dp"
              android:layout_height="200dp"
              android:scaleType="centerCrop"
              android:layout_below="@id/teamimg"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/formed"
                  android:layout_width="140dp"
                  android:layout_height="20dp"
                  android:fontFamily="@font/poppinsregular"
                  android:layout_marginLeft="10dp"
                  android:layout_below="@id/teamimg"
                  android:textStyle="bold"
                  android:layout_marginTop="20dp"
                  android:textSize="10sp"
                  android:layout_toRightOf="@id/jerseyimg"
                  android:text="Formed Year"/>
              <TextView
                  android:id="@+id/year"
                  android:layout_width="80dp"
                  android:layout_height="40dp"
                  android:textStyle="bold"
                  android:text="year"
                  android:layout_marginTop="10dp"
                  android:textSize="20sp"
                  android:layout_toRightOf="@id/jerseyimg"
                  android:fontFamily="@font/bungeeregular"
                  android:layout_below="@+id/formed"
                  android:layout_marginLeft="10dp"/>
              <TextView
                  android:id="@+id/sports"
                  android:layout_width="100dp"
                  android:layout_height="30dp"
                  android:layout_below="@+id/teamimg"
                  android:layout_marginTop="30dp"
                  android:layout_marginLeft="10dp"
                  android:fontFamily="@font/poppinsregular"
                  android:textStyle="bold"
                  android:textSize="20sp"
                  android:layout_toRightOf="@id/jerseyimg"
                  android:text="Sports"/>
              <TextView
                  android:id="@+id/sport"
                  android:layout_width="100dp"
                  android:layout_height="50dp"
                  android:textStyle="bold"
                  android:text="sport"
                  android:fontFamily="@font/bungeeregular"
                  android:textSize="20sp"
                  android:layout_marginTop="10dp"
                  android:layout_below="@id/sports"
                  android:layout_toRightOf="@id/jerseyimg"
                  android:layout_marginLeft="10dp"
                  />

          </LinearLayout>



      </LinearLayout>
      <TextView
          android:id="@+id/teamdesc"
          android:layout_width="match_parent"
          android:fontFamily="sans-serif-light"
          android:layout_height="wrap_content"
          android:layout_below="@id/jerseyimg"
          android:text="teamdesc"
          android:textStyle="bold"
          android:textSize="10sp"
          android:gravity="center"
          android:layout_marginTop="30dp"/>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >


          <TextView
              android:id="@+id/stadiumname"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/teamdesc"
              android:fontFamily="sans-serif-light"
              android:text="staduimname"
              android:textStyle="bold"
              android:textSize="30sp"
              android:gravity="center"
              android:layout_marginTop="30dp"/>
          <ImageView
              android:id="@+id/stadiumimg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/stadiumname"
              android:scaleType="fitXY"
              />
          <TextView
              android:id="@+id/stadiumdesc"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/stadiumimg"
              android:fontFamily="sans-serif-light"
              android:text="desc"
              android:textStyle="bold"
              android:gravity="center"
              android:layout_marginBottom="50dp"
              android:textSize="10sp"
              android:layout_marginTop="20dp"/>

      </LinearLayout>
  </LinearLayout>


    </ScrollView>

</LinearLayout>