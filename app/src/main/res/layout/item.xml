<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            app:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="4dp"
            app:cardCornerRadius="10dp"
            android:background="@drawable/cardlayer1"
            android:id="@+id/card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tbadge"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="210dp"
                />
            <ImageView
                android:padding="10dp"
                android:id="@+id/img"
                android:scaleType="centerCrop"
                android:transitionName="img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
               />
            <ProgressBar
                android:id="@+id/progress_load_photo"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text1"
                android:layout_width="100dp"
                android:layout_below="@id/img"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="16dp"
                android:text="Team Name: "/>
            <TextView
                android:id="@+id/TeamName"
                android:layout_width="200dp"
                android:layout_below="@id/text1"
                android:textColor="@color/colorAccent"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/bungeeregular"
                android:layout_marginRight="16dp"
                android:text="Team Name: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="150dp"
                android:layout_below="@id/TeamName"
                android:layout_height="20dp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Alternative Name:"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/altername"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:text="Alternative"
                android:maxLines="1"
                android:layout_below="@id/text2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                android:fontFamily="@font/bungeeregular"
                android:textStyle="bold"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/word"
                android:maxLines="2"
                android:textColor="@color/colorAccent"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/altername"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/cardlayer1"
        android:layout_marginBottom="7dp"

        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="10dp"
        android:id="@+id/card2"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="10dp"
                android:id="@+id/img2"
                android:scaleType="centerCrop"
                android:transitionName="img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />
            <ProgressBar
                android:id="@+id/progress_load_photo2"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text12"
                android:layout_width="match_parent"
                android:layout_below="@id/img2"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="16dp"
                android:text="Team Name: "/>
            <TextView
                android:id="@+id/TeamName2"
                android:layout_width="match_parent"
                android:layout_below="@id/text12"
                android:textColor="@color/colorAccent"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Team Name: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/text22"
                android:layout_width="match_parent"
                android:layout_below="@id/TeamName2"
                android:layout_height="20dp"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Alternative Name:"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/altername2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Alternative"
                android:layout_below="@id/text22"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/word2"
                android:maxLines="2"
                android:textColor="@color/colorAccent"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/altername2"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>