<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    tools:context=".EventDetails"
    android:orientation="vertical"
    android:background="@drawable/cardlayer1"
    android:layout_gravity="center"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MATCH DETAILS"
        android:layout_marginTop="5dp"

        android:fontFamily="@font/bungeeregular"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/Title"
            android:text="TITLE"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/card1"
            android:textAlignment="center"
            android:fontFamily="@font/bungeeregular"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_margin="0dp">
       <ImageView
           android:id="@+id/imagematch"
          android:layout_width="match_parent"
           android:layout_height="150dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ass"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:text="Date"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="150dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:background="@drawable/card1"
                android:layout_below="@+id/ass"
                android:textColor="@color/search"
                android:fontFamily="@font/poppinsregular"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/asaa"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:text="Time"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="150dp"
                android:textColor="@color/search"
                android:gravity="center"
                android:layout_below="@id/asaa"
                android:fontFamily="@font/poppinsregular"
                android:layout_height="wrap_content"
                android:background="@drawable/card1"
                android:layout_toRightOf="@+id/date"
                android:layout_marginStart="50dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/as"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:text="League"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/league"
                android:layout_width="150dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:background="@drawable/card1"
                android:textColor="@color/search"
                android:layout_below="@+id/as"
                android:fontFamily="@font/poppinsregular"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/asa"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:text="Season"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/season"
                android:layout_marginTop="0dp"
                android:layout_width="150dp"
                android:textColor="@color/search"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:layout_below="@+id/asa"
                android:background="@drawable/card1"
                android:gravity="center"
                android:layout_toRightOf="@+id/league"
                android:layout_marginStart="50dp"/>
        </RelativeLayout>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Home Team"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="20dp"
            />
        <TextView
            android:textStyle="bold"
            android:textColor="@color/search"
            android:id="@+id/home"
            android:layout_gravity="center"
            android:background="@drawable/card1"
            android:text="Home"
            android:layout_marginTop="0dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />
        <TextView
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="Away Team"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="10sp"
        android:layout_width="wrap_content"
            android:layout_gravity="center"
        android:layout_height="20dp"
        />
        <TextView
            android:textStyle="bold"
            android:textColor="@color/search"
            android:layout_gravity="center"
            android:id="@+id/away"
            android:background="@drawable/card1"
            android:text="Away"
            android:layout_marginTop="0dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/vv"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Venue"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_height="20dp"
            />
        <TextView
            android:textStyle="bold"
            android:textColor="@color/search"
            android:id="@+id/venue"
            android:layout_below="@+id/vv"
            android:layout_marginLeft="5dp"
            android:background="@drawable/card1"
            android:text="Venue"
            android:layout_marginTop="0dp"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Status"
            android:id="@+id/ss"
            android:layout_toRightOf="@+id/vv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="10sp"
            android:layout_marginStart="200dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="20dp"
            />
        <TextView
            android:textStyle="bold"
            android:textColor="@color/search"
            android:id="@+id/stats"
            android:background="@drawable/card1"
            android:text="Status"
            android:layout_marginTop="0dp"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/ss"
            android:layout_marginStart="40dp"
            android:layout_toRightOf="@+id/venue"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
        </RelativeLayout>

    </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>